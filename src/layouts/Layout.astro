---
import { ViewTransitions } from 'astro:transitions';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import {
APP_AUTHOR,
APP_AUTHOR_WEBSITE,
APP_DESCRIPTION,
APP_KEYWORDS,
APP_NAME,
APP_USERNAME,
} from '../lib';
import '../styles/global.css';
---

<!doctype html>
<html
	lang="en"
	dir="ltr"
>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		
		<title>{APP_NAME} | Software Engineer</title>
		<meta name="description" content={APP_DESCRIPTION} />
		<meta name="author" content={APP_AUTHOR} />
		<meta name="keywords" content={APP_KEYWORDS} />

		<!-- Favicons -->
		<link rel="icon" type="image/x-icon" href="/meta/favicon.ico" />
		<link rel="icon" type="image/png" sizes="16x16" href="/meta/favicon-16x16.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/meta/favicon-32x32.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/meta/apple-touch-icon.png" />

		<!-- PWA / Android -->
		<link rel="icon" type="image/png" sizes="192x192" href="/meta/android-chrome-192x192.png" />
		<link rel="icon" type="image/png" sizes="512x512" href="/meta/android-chrome-512x512.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="theme-color" content="#0f0f0f" />

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" />

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={APP_NAME} />
		<meta property="og:description" content={APP_DESCRIPTION} />
		<meta property="og:url" content={APP_AUTHOR_WEBSITE} />
		<meta property="og:image" content={`${APP_AUTHOR_WEBSITE}/assets/tareq.webp`} />
		<meta property="og:site_name" content={APP_NAME} />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={APP_NAME} />
		<meta name="twitter:description" content={APP_DESCRIPTION} />
		<meta name="twitter:image" content={`${APP_AUTHOR_WEBSITE}/assets/tareq.webp`} />
		<meta name="twitter:creator" content={`@${APP_USERNAME}`} />

		<!-- View Transitions for SPA-like navigation -->
		<ViewTransitions />
	</head>
	<body
		id={APP_USERNAME}
		class="min-h-screen w-full"
	>
		<Header />
		<main
			id="main-content"
			role="main"
			class="flex flex-col"
		>
			<slot />
		</main>
		<Footer />
	</body>
</html>
