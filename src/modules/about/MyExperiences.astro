---
import { Timeline, TimelineItem } from '@/components/Timeline';

const experiences = [
	{
		title: 'Software Engineer',
		subtitle: 'Tech Company',
		date: '2022 - Present',
		description: 'Working on cool projects.',
	},
	{
		title: 'Intern',
		subtitle: 'Another Tech Company',
		date: '2021 - 2022',
		description: 'Learned a lot.',
	},
	{
		title: "Bachelor's Degree",
		subtitle: 'University',
		date: '2017 - 2021',
		description: 'Studied Computer Science.',
	},
];
---

<section class="experience-section py-12">
	<h2
		aria-label="My Experiences"
		class="experience-section-title mb-8 text-center text-3xl font-bold"
	>
		My Experiences
	</h2>
	<Timeline className="experience-timeline">
		{
			experiences.map((exp, index) => (
				<TimelineItem
					isLeft={index % 2 === 0}
					className="experience-item"
					aria-label={`Experience ${index + 1}`}
				>
					<div
						aria-label="Experience content"
						class="experience-content"
					>
						<h3
							aria-label="Experience title"
							class="experience-title text-lg font-bold"
						>
							{exp.title}
						</h3>
						<p
							aria-label="Experience subtitle"
							class="experience-company text-sm text-slate-500 dark:text-slate-300"
						>
							{exp.subtitle}
						</p>
						<p
							aria-label="Experience date"
							class="experience-period text-sm text-slate-500 dark:text-slate-300"
						>
							{exp.date}
						</p>
						<p
							aria-label="Experience description"
							class="experience-description mt-2 text-sm"
						>
							{exp.description}
						</p>
					</div>
				</TimelineItem>
			))
		}
	</Timeline>
</section>
