---
import { IconName } from '@/lib/icons';
import Button from '../../components/Button.astro';
import Icon from '../../components/icons/index.astro';
import Section from '../../components/Section.astro';
import SectionHeader from '../../components/SectionHeader.astro';
import { ABOUT_CONTENT, APP_AUTHOR_EMAIL } from '../../lib';

const delayClasses = [
	'animate-delay-100',
	'animate-delay-200',
	'animate-delay-300',
	'animate-delay-400',
	'animate-delay-500',
];
---

<Section id="about" label="About section">
	<SectionHeader title="About" subtitle={ABOUT_CONTENT.intro} />

	<div class="max-w-2xl flex flex-col gap-6">
		{
			ABOUT_CONTENT.description.map((paragraph, index) => (
				<p
					class:list={[
						'animate-on-scroll text-muted leading-relaxed',
						delayClasses[index] || 'animate-delay-100',
					]}
				>
					{paragraph}
				</p>
			))
		}
		<Button
			href={`mailto:${APP_AUTHOR_EMAIL}`}
			class="animate-on-scroll animate-delay-300 self-start"
		>
			<Icon name={IconName.ENVELOPE} size={16} />
			Get In Touch
		</Button>
	</div>
</Section>
