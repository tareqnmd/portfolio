---
import Section from '../../components/Section.astro';
import SectionHeader from '../../components/SectionHeader.astro';
import Button from '../../components/Button.astro';
import { APP_AUTHOR_EMAIL, ABOUT_CONTENT } from '../../lib';
import { FaEnvelope } from 'react-icons/fa';
---

<Section id="about" label="About section">
	<SectionHeader title="About" subtitle={ABOUT_CONTENT.intro} />
	
	<div class="max-w-2xl flex flex-col gap-6">
		{ABOUT_CONTENT.description.map((paragraph, index) => (
			<p class={`animate-on-scroll animate-delay-${(index + 1) * 100} text-foreground-muted leading-relaxed`}>
				{paragraph}
			</p>
		))}
		<Button href={`mailto:${APP_AUTHOR_EMAIL}`} class="animate-on-scroll animate-delay-300 self-start">
			<FaEnvelope className="text-base" />
			Get In Touch
		</Button>
	</div>
</Section>
