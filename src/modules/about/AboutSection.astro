---
import { APP_AUTHOR_EMAIL, ABOUT_CONTENT } from '../../lib';
import { FaEnvelope } from 'react-icons/fa';
---

<section
	id="about"
	class="section"
	aria-label="About section"
>
	<div class="container mx-auto flex flex-col gap-12">
		<div class="flex flex-col gap-2">
			<h2 class="animate-on-scroll section-title">About</h2>
			<p class="animate-on-scroll animate-delay-100 section-subtitle">
				{ABOUT_CONTENT.intro}
			</p>
		</div>
		
		<div class="max-w-2xl flex flex-col gap-6">
			{ABOUT_CONTENT.description.map((paragraph, index) => (
				<p class={`animate-on-scroll animate-delay-${(index + 1) * 100} text-foreground-muted leading-relaxed`}>
					{paragraph}
				</p>
			))}
			<a href={`mailto:${APP_AUTHOR_EMAIL}`} class="animate-on-scroll animate-delay-300 btn-primary self-start">
				<FaEnvelope className="text-base" />
				Get In Touch
			</a>
		</div>
	</div>
</section>
