---
import Section from '@/components/Section.astro';
import SocialLinks from '@/components/SocialLinks.astro';
import { APP_AUTHOR, APP_DESCRIPTION } from '@/lib';
---

<Section id="home" label="Hero section" class="flex items-center">
	<div class="container mx-auto">
		<div class="max-w-2xl flex flex-col gap-4">
			<p class="animate-on-scroll text-primary text-sm font-medium">Software Engineer</p>
			<h1
				class="animate-on-scroll animate-delay-100 text-4xl md:text-5xl font-semibold text-foreground leading-tight"
			>
				Hi, I'm {APP_AUTHOR}, a software engineer crafting scalable web products.
			</h1>
			<p class="animate-on-scroll animate-delay-200 text-muted text-lg leading-relaxed">
				{APP_DESCRIPTION}
			</p>
			<SocialLinks class="animate-on-scroll animate-delay-300 mt-4" size="md" />
		</div>
	</div>
</Section>
