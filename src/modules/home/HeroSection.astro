---
import { FaChevronDown, FaCode, FaGithub } from 'react-icons/fa';
import { APP_AUTHOR, APP_AUTHOR_GITHUB, APP_DESCRIPTION } from '../../lib';
---

<section
	id="home"
	class="min-h-screen flex items-center"
	aria-label="Hero section"
>
	<div class="container mx-auto">
		<div class="max-w-2xl flex flex-col gap-4">
			<p class="animate-on-scroll text-emerald-400 text-sm font-medium">
				Software Developer
			</p>
			<h1 class="animate-on-scroll animate-delay-100 text-4xl md:text-5xl font-semibold text-foreground leading-tight">
				Hi, I'm {APP_AUTHOR}
			</h1>
			<p class="animate-on-scroll animate-delay-200 text-foreground-muted text-lg leading-relaxed">
				{APP_DESCRIPTION}
			</p>
			<div class="animate-on-scroll animate-delay-300 flex flex-wrap gap-3 mt-4">
				<a href="#projects" class="btn-primary">
					<FaCode className="text-base" />
					View Projects
				</a>
				<a href={APP_AUTHOR_GITHUB} target="_blank" rel="noopener noreferrer" class="btn-secondary">
					<FaGithub className="text-lg" />
					GitHub
				</a>
			</div>
		</div>
	</div>
	
	<div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-on-scroll animate-delay-400">
		<a href="#about" class="flex flex-col items-center gap-2 text-foreground-muted hover:text-foreground transition-colors text-sm">
			<span>Scroll</span>
			<FaChevronDown className="animate-bounce" />
		</a>
	</div>
</section>
