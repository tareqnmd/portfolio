---
import Section from '../../components/Section.astro';
import SectionHeader from '../../components/SectionHeader.astro';
import Card from '../../components/Card.astro';
import Icon from '../../components/icons/index.astro';
import { BLOGS, ExternalLinks } from '../../lib';

const delayClasses = ['animate-delay-100', 'animate-delay-200'];
---

<Section id="blogs" label="Blog section">
	<SectionHeader title="Blog" subtitle="Thoughts and tutorials" />
	
	<div class="grid md:grid-cols-2 gap-5">
		{BLOGS.map((blog, index) => (
			<Card as="article" class:list={["animate-on-scroll group flex flex-col gap-3", delayClasses[index % 2]]}>
				<div class="flex items-center gap-3 text-sm text-muted">
					<span>{blog.date}</span>
					<span>â€¢</span>
					<span>{blog.readTime}</span>
				</div>
				<h3 class="font-medium text-foreground group-hover:text-primary transition-colors">
					{blog.title}
				</h3>
				<p class="text-sm text-muted flex-grow">
					{blog.excerpt}
				</p>
				<a 
					href={ExternalLinks.BLOG}
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center gap-2 text-sm text-primary font-medium group/link self-start"
				>
					Read more 
					<Icon name="arrow-right" size={12} class="transition-transform group-hover/link:translate-x-1" />
				</a>
			</Card>
		))}
	</div>
</Section>
