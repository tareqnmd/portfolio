---
import Section from '../../components/Section.astro';
import SectionHeader from '../../components/SectionHeader.astro';
import Card from '../../components/Card.astro';
import Icon from '../../components/icons/index.astro';
import { BLOGS, ExternalLinks } from '../../lib';

const delayClasses = ['animate-delay-100', 'animate-delay-200'];
---

<Section id="blogs" label="Blog section">
	<SectionHeader title="Blog" subtitle="Thoughts and tutorials" />
	
	<div class="grid md:grid-cols-2 gap-5">
		{BLOGS.map((blog, index) => (
			<a 
				href={blog.url}
				target="_blank"
				rel="noopener noreferrer"
				class:list={["animate-on-scroll group block", delayClasses[index % 2]]}
			>
				<Card as="article" class="flex flex-col gap-3 h-full">
					<div class="flex items-center gap-3 text-sm text-muted">
						<span>{blog.date}</span>
						<span>â€¢</span>
						<span>{blog.readTime}</span>
					</div>
					<h3 class="font-medium text-foreground group-hover:text-primary transition-colors">
						{blog.title}
					</h3>
					<p class="text-sm text-muted flex-grow">
						{blog.excerpt}
					</p>
					<span class="inline-flex items-center gap-2 text-sm text-primary font-medium self-start">
						Read more 
						<Icon name="arrow-right" size={12} class="transition-transform group-hover:translate-x-1" />
					</span>
				</Card>
			</a>
		))}
	</div>
	
	<div class="flex justify-center mt-8">
		<a 
			href={ExternalLinks.BLOG}
			target="_blank"
			rel="noopener noreferrer"
			class="btn-secondary inline-flex items-center gap-2"
		>
			View All Blogs
			<Icon name="arrow-right" size={16} />
		</a>
	</div>
</Section>
