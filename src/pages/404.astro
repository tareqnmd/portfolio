---
import Section from '../components/Section.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<Section id="not-found" label="Page not found" class="flex items-center">
		<div class="text-center max-w-2xl mx-auto flex flex-col gap-4">
			<p class="text-sm font-mono text-primary">Error 404</p>
			<h1 class="text-4xl md:text-5xl font-semibold text-foreground">Page not found</h1>
			<p class="text-muted text-lg">
				The page you are looking for doesn't exist or may have moved. Try one of the links below to
				keep exploring.
			</p>
			<div class="flex flex-wrap justify-center gap-3 mt-2">
				<a class="button button-primary" href="/">Back to homepage</a>
				<a class="button button-secondary" href="/#projects">View projects</a>
				<a class="button button-secondary" href="/#blogs">Read the blog</a>
			</div>
		</div>
	</Section>
</Layout>
