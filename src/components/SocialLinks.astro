---
import { IconName } from '@/lib/icons';
import {
	APP_AUTHOR_EMAIL,
	APP_AUTHOR_GITHUB,
	APP_AUTHOR_LINKEDIN,
	APP_AUTHOR_TWITTER,
} from '../lib';
import Icon from './icons/index.astro';

interface Props {
	class?: string;
	size?: 'sm' | 'md' | 'lg';
}

const { class: className, size = 'md' } = Astro.props;

const socialLinks = [
	{ name: 'GitHub', icon: IconName.GITHUB, url: APP_AUTHOR_GITHUB },
	{ name: 'LinkedIn', icon: IconName.LINKEDIN, url: APP_AUTHOR_LINKEDIN },
	{ name: 'Twitter', icon: IconName.TWITTER, url: APP_AUTHOR_TWITTER },
	{ name: 'Email', icon: IconName.ENVELOPE, url: `mailto:${APP_AUTHOR_EMAIL}` },
];

const sizeClasses: Record<NonNullable<Props['size']>, { container: string; icon: number }> = {
	sm: { container: 'w-8 h-8', icon: 16 },
	md: { container: 'w-10 h-10', icon: 18 },
	lg: { container: 'w-12 h-12', icon: 20 },
};
---

<nav aria-label="Social links" class:list={[className]}>
	<ul class="flex gap-3 list-none p-0 m-0">
		{
			socialLinks.map(social => (
				<li>
					<a
						href={social.url}
						target="_blank"
						rel="noopener noreferrer"
						class:list={['social-link', sizeClasses[size].container]}
						aria-label={social.name}
					>
						<Icon name={social.icon} size={sizeClasses[size].icon} />
					</a>
				</li>
			))
		}
	</ul>
</nav>
