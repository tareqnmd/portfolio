---
import Icon from './icons/index.astro';
import {
	APP_AUTHOR_EMAIL,
	APP_AUTHOR_GITHUB,
	APP_AUTHOR_LINKEDIN,
	APP_AUTHOR_TWITTER,
} from '../lib';

interface Props {
	class?: string;
	size?: 'sm' | 'md' | 'lg';
}

const { class: className, size = 'md' } = Astro.props;

const socialLinks = [
	{ name: 'GitHub', icon: 'github' as const, url: APP_AUTHOR_GITHUB },
	{ name: 'LinkedIn', icon: 'linkedin' as const, url: APP_AUTHOR_LINKEDIN },
	{ name: 'Twitter', icon: 'twitter' as const, url: APP_AUTHOR_TWITTER },
	{ name: 'Email', icon: 'envelope' as const, url: `mailto:${APP_AUTHOR_EMAIL}` },
];

const sizeClasses: Record<NonNullable<Props['size']>, { container: string; icon: number }> = {
	sm: { container: 'w-8 h-8', icon: 16 },
	md: { container: 'w-10 h-10', icon: 18 },
	lg: { container: 'w-12 h-12', icon: 20 },
};
---

<div class:list={['flex gap-3', className]}>
	{
		socialLinks.map(social => (
			<a
				href={social.url}
				target="_blank"
				rel="noopener noreferrer"
				class:list={['social-link', sizeClasses[size].container]}
				aria-label={social.name}
			>
				<Icon name={social.icon} size={sizeClasses[size].icon} />
			</a>
		))
	}
</div>
