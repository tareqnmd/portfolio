---
import { FaEnvelope, FaGithub, FaLinkedin, FaTwitter } from 'react-icons/fa';
import {
	APP_AUTHOR_EMAIL,
	APP_AUTHOR_GITHUB,
	APP_AUTHOR_LINKEDIN,
	APP_AUTHOR_TWITTER,
} from '../lib';

interface Props {
	class?: string;
	size?: 'sm' | 'md' | 'lg';
}

const { class: className, size = 'md' } = Astro.props;

const socialLinks = [
	{ name: 'GitHub', icon: FaGithub, url: APP_AUTHOR_GITHUB },
	{ name: 'LinkedIn', icon: FaLinkedin, url: APP_AUTHOR_LINKEDIN },
	{ name: 'Twitter', icon: FaTwitter, url: APP_AUTHOR_TWITTER },
	{ name: 'Email', icon: FaEnvelope, url: `mailto:${APP_AUTHOR_EMAIL}` },
];

const sizeClasses: Record<NonNullable<Props['size']>, string> = {
	sm: 'w-8 h-8 text-base',
	md: 'w-10 h-10 text-lg',
	lg: 'w-12 h-12 text-xl'
};
---

<div class:list={["flex gap-3", className]}>
	{socialLinks.map(social => (
		<a 
			href={social.url}
			target="_blank"
			rel="noopener noreferrer"
			class:list={["social-link", sizeClasses[size]]}
			aria-label={social.name}
		>
			<social.icon />
		</a>
	))}
</div>

