---
interface Props {
	class?: string;
	padding?: 'none' | 'sm' | 'md' | 'lg';
	hover?: boolean;
	as?: 'div' | 'article';
}

const { 
	class: className, 
	padding = 'md',
	hover = true,
	as: Element = 'div'
} = Astro.props;

const paddingClasses: Record<NonNullable<Props['padding']>, string> = {
	none: '',
	sm: 'p-3',
	md: 'p-5',
	lg: 'p-6'
};
---

<Element 
	class:list={[
		"card",
		paddingClasses[padding],
		{ "hover:border-primary hover:-translate-y-0.5": hover },
		className
	]}
>
	<slot />
</Element>

