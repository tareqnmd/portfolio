---
import Logo from '../assets/logo.svg';
import { cn, Routes } from '../lib';
import HeaderSidebar from './HeaderSidebar.astro';
const { pathname } = Astro.url;
const isActive = (path: string) => pathname === path;
---

<header
	class="header container flex justify-between items-center py-4"
	role="banner"
>
	<a
		class="logo inline-flex items-center hover:opacity-80 transition-opacity"
		href={Routes.HOME}
		aria-label="Home"
	>
		<Logo fill="currentColor" />
	</a>
	<nav
		class="nav hidden lg:block"
		aria-label="Main navigation"
	>
		<ul class="nav-list flex items-center gap-6">
			<li>
				<a
					class={cn(
						'nav-link hover:text-primary transition-colors',
						isActive(Routes.ABOUT) && 'text-primary'
					)}
					href={Routes.ABOUT}
					aria-label="About me page"
					>About me</a
				>
			</li>
			<li>
				<a
					class={cn(
						'nav-link hover:text-primary transition-colors',
						isActive(Routes.BLOGS) && 'text-primary'
					)}
					href={Routes.BLOGS}
					aria-label="Blogs page"
					>Blogs</a
				>
			</li>
			<li>
				<a
					class={cn(
						'nav-link hover:text-primary transition-colors',
						isActive(Routes.PROJECTS) && 'text-primary'
					)}
					href={Routes.PROJECTS}
					aria-label="Projects page"
					>Projects</a
				>
			</li>
			<li>
				<a
					class={cn(
						'nav-link hover:text-primary transition-colors',
						isActive(Routes.CONTACT) && 'text-primary'
					)}
					href={Routes.CONTACT}
					aria-label="Contact page"
					>Contact</a
				>
			</li>
		</ul>
	</nav>
	<HeaderSidebar />
</header>
