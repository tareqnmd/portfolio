---
import { APP_NAME } from '../lib';
import SocialLinks from './SocialLinks.astro';

const year = new Date().getFullYear();
---

<footer
	id="app-footer"
	role="contentinfo"
	aria-label="Footer"
	class="py-12 border-t border-border footer"
>
	<div class="container mx-auto">
		<div class="flex justify-between items-center gap-8 max-md:flex-col">
			<SocialLinks />
			<p class="text-sm text-muted text-center">
				Â© {year}
				{APP_NAME}. All rights reserved.
			</p>
		</div>
	</div>
</footer>

<script>
	function addFooterHeight() {
		document.documentElement.style.setProperty(
			'--footer-height',
			`${document.getElementById('app-footer')?.clientHeight}px`
		);
	}

	addFooterHeight();

	document.addEventListener('astro:after-swap', addFooterHeight);
</script>
