---
import { FaEnvelope, FaGithub, FaLinkedin, FaTwitter } from 'react-icons/fa';
import {
APP_AUTHOR_EMAIL,
APP_AUTHOR_GITHUB,
APP_AUTHOR_LINKEDIN,
APP_AUTHOR_TWITTER,
APP_NAME
} from '../lib';

const year = new Date().getFullYear();

const socialLinks = [
	{ name: 'GitHub', icon: FaGithub, url: APP_AUTHOR_GITHUB },
	{ name: 'LinkedIn', icon: FaLinkedin, url: APP_AUTHOR_LINKEDIN },
	{ name: 'Twitter', icon: FaTwitter, url: APP_AUTHOR_TWITTER },
	{ name: 'Email', icon: FaEnvelope, url: `mailto:${APP_AUTHOR_EMAIL}` },
];
---

<footer
	role="contentinfo"
	aria-label="Footer"
	class="py-12 border-t border-border"
>
	<div class="container mx-auto">
		<div class="flex justify-between items-center gap-8 max-md:flex-col">
			<div class="flex gap-3">
				{socialLinks.map(social => (
					<a 
						href={social.url}
						target="_blank"
						rel="noopener noreferrer"
						class="social-link"
						aria-label={social.name}
					>
						<social.icon className="text-lg" />
					</a>
				))}
			</div>
			<p class="text-sm text-foreground-muted text-center">
				Â© {year} {APP_NAME}. All rights reserved.
			</p>
		</div>
	</div>
</footer>
