---
import type { IconName } from '../../lib/icons';
import GithubIcon from './GithubIcon.astro';
import LinkedinIcon from './LinkedinIcon.astro';
import TwitterIcon from './TwitterIcon.astro';
import EnvelopeIcon from './EnvelopeIcon.astro';
import ExternalLinkIcon from './ExternalLinkIcon.astro';
import ChevronDownIcon from './ChevronDownIcon.astro';
import MenuIcon from './MenuIcon.astro';
import XIcon from './XIcon.astro';
import BriefcaseIcon from './BriefcaseIcon.astro';
import GraduationCapIcon from './GraduationCapIcon.astro';
import ArrowRightIcon from './ArrowRightIcon.astro';
import HomeIcon from './HomeIcon.astro';
import UserIcon from './UserIcon.astro';
import FolderIcon from './FolderIcon.astro';
import PenIcon from './PenIcon.astro';

export interface Props {
	name: IconName;
	class?: string;
	size?: number;
}

const { name, class: className, size = 20 } = Astro.props as Props;

const icons: Record<IconName, any> = {
	github: GithubIcon,
	linkedin: LinkedinIcon,
	twitter: TwitterIcon,
	envelope: EnvelopeIcon,
	'external-link': ExternalLinkIcon,
	'chevron-down': ChevronDownIcon,
	menu: MenuIcon,
	x: XIcon,
	briefcase: BriefcaseIcon,
	'graduation-cap': GraduationCapIcon,
	'arrow-right': ArrowRightIcon,
	home: HomeIcon,
	user: UserIcon,
	folder: FolderIcon,
	pen: PenIcon,
};

const IconComponent = icons[name];
---

{IconComponent && <IconComponent class={className} size={size} />}
