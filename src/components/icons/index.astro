---
import type { AstroComponentFactory } from 'astro/runtime/server/index.js';
import { IconName } from '../../lib/icons';

import ArrowRightIcon from './ArrowRightIcon.astro';
import BookmarkIcon from './BookmarkIcon.astro';
import BriefcaseIcon from './BriefcaseIcon.astro';
import ChevronDownIcon from './ChevronDownIcon.astro';
import EnvelopeIcon from './EnvelopeIcon.astro';
import ExternalLinkIcon from './ExternalLinkIcon.astro';
import FolderIcon from './FolderIcon.astro';
import GithubIcon from './GithubIcon.astro';
import GraduationCapIcon from './GraduationCapIcon.astro';
import HomeIcon from './HomeIcon.astro';
import LinkedinIcon from './LinkedinIcon.astro';
import MenuIcon from './MenuIcon.astro';
import PenIcon from './PenIcon.astro';
import DocumentIcon from './DocumentIcon.astro';
import TwitterIcon from './TwitterIcon.astro';
import UserIcon from './UserIcon.astro';
import XIcon from './XIcon.astro';

export interface Props {
	name: IconName;
	class?: string;
	size?: number;
}

const { name, class: className, size = 20 } = Astro.props;

const icons: Record<IconName, AstroComponentFactory> = {
	[IconName.GITHUB]: GithubIcon,
	[IconName.LINKEDIN]: LinkedinIcon,
	[IconName.TWITTER]: TwitterIcon,
	[IconName.ENVELOPE]: EnvelopeIcon,
	[IconName.EXTERNAL_LINK]: ExternalLinkIcon,
	[IconName.CHEVRON_DOWN]: ChevronDownIcon,
	[IconName.MENU]: MenuIcon,
	[IconName.X]: XIcon,
	[IconName.BRIEFCASE]: BriefcaseIcon,
	[IconName.GRADUATION_CAP]: GraduationCapIcon,
	[IconName.ARROW_RIGHT]: ArrowRightIcon,
	[IconName.HOME]: HomeIcon,
	[IconName.USER]: UserIcon,
	[IconName.FOLDER]: FolderIcon,
	[IconName.PEN]: PenIcon,
	[IconName.DOCUMENT]: DocumentIcon,
};

const IconComponent = icons[name];
---

{IconComponent && <IconComponent class={className} size={size} />}
